<div id="books">
  <% @books.each do |book| %>
      <div class="row well">
        <div class="col-sm-2">
          <%= link_to(book) do %>
              <%= image_for(book) %>
          <% end %>
        </div>
        <div class="col-sm-10">
          <h3><%= link_to(book.title, book) %> <small>by <%= book.author %></small></h3>
        </div>
      </div>
  <% end %>
</div>

<p class="pull-left">
  <%= link_to 'New Book', new_book_path, class: 'btn btn-default' %>
</p>
<p class="pull-right">
  <%= pluralize(@books.size, 'book') %>
</p>