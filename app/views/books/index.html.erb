<h1><%= pluralize(@books.size, 'book') %></h1>

<%= render 'shared/flashes' %>

<div id="books">
  <% @books.each do |book| %>
      <div class="row well">
        <div class="col-sm-2">
          <%= link_to(book) do %>
              <%= image_for(book) %>
          <% end %>
        </div>
        <div class="col-sm-10">
          <h3><%= link_to(book.title, book) %><br/></h3>
          by <%= book.author %>
        </div>
      </div>
  <% end %>
</div>

<p>
  <%= link_to 'New Book', new_book_path, class: 'btn btn-default' %>
</p>