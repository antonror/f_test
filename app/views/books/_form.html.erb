<%= form_for @book, html: {multipart: true} do |f| %>
      <%= render 'shared/errors', object: @book %>
      <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, autofocus: true, class: "row" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :author, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :author, autofocus: true, class: "row" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pages, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :pages, autofocus: true, class: "row" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :price, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :price, autofocus: true, class: "row" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :image, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.file_field :image, autofocus: true, class: "row" %>
        </div>
      </div>
      <p>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', books_path, class: 'btn btn-link' %>
      </p>
<% end %>