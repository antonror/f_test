%body
  %header
    %h3
      Reviews for #{link_to(@book.title, @book)}
    %span#review_count
      (#{pluralize(@reviews.size, 'review')}, average #{format_average_stars(@book)})
  = render partial: 'shared/reviews', locals: { reviews: @reviews }
  %nav
    = link_to 'Write a Review', new_book_review_path(@book), |
      remote: true,                                          |
      data: { 'update-target' => 'review_form_container' },  |
      class: 'btn btn-primary'                               |
    = link_to 'Back', @book, class: 'btn btn-link'
  #review_form_container
